<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_gradient4"
    tools:context=".PythonQuiz">

    <TextView
        android:id="@+id/python"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Python Quiz"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Correct extension of the python file"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/pq2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/pq1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView6">

        <RadioButton
            android:id="@+id/pq1op1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Function" />

        <RadioButton
            android:id="@+id/pq1o2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="def" />

        <RadioButton
            android:id="@+id/pq1o3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fun" />

        <RadioButton
            android:id="@+id/pq1o4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="define" />
    </RadioGroup>





    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Keyword used for function in python"
        app:layout_constraintBottom_toTopOf="@+id/pq1"
        app:layout_constraintStart_toStartOf="@+id/pq2" />

    <RadioGroup
        android:id="@+id/pq2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView5">

        <RadioButton
            android:id="@+id/pq2op1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".python" />

        <RadioButton
            android:id="@+id/pq2o2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".pl" />

        <RadioButton
            android:id="@+id/pq2o3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".py" />

        <RadioButton
            android:id="@+id/pq2o4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".p" />
    </RadioGroup>

    <Button
        android:id="@+id/pythonQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>