<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_gradient6"
    tools:context=".SelectQuiz">

    <TextView
        android:id="@+id/takeQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Take Quiz"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pythonTest"
        android:layout_width="167dp"
        android:layout_height="63dp"
        android:layout_marginTop="72dp"
        android:text="Python Quiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/takeQuiz" />

    <Button
        android:id="@+id/cppTest"
        android:layout_width="167dp"
        android:layout_height="63dp"
        android:layout_marginTop="24dp"
        android:text="C++ Quiz"
        app:layout_constraintStart_toStartOf="@+id/javaTest"
        app:layout_constraintTop_toBottomOf="@+id/javaTest" />

    <Button
        android:id="@+id/javaTest"
        android:layout_width="167dp"
        android:layout_height="63dp"
        android:layout_marginTop="24dp"
        android:text="Java Quiz"
        app:layout_constraintStart_toStartOf="@+id/pythonTest"
        app:layout_constraintTop_toBottomOf="@+id/pythonTest" />

    <Button
        android:id="@+id/display"
        android:layout_width="167dp"
        android:layout_height="63dp"
        android:layout_marginBottom="20dp"
        android:text="Display Score"
        app:layout_constraintBottom_toTopOf="@+id/share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/share"
        android:layout_width="167dp"
        android:layout_height="63dp"
        android:layout_marginBottom="104dp"
        android:text="Share Result"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>